<script>
const GOOGLE_APPS_SCRIPT_URL = "TON_URL_DEPLOIEMENT_EXEC"; // ‚ö†Ô∏è Mets ici ton /exec

// Toggle menu ‚ò∞
document.querySelector(".menu-btn").addEventListener("click", () => {
  const menu = document.getElementById("menu");
  menu.style.display = menu.style.display === "none" ? "block" : "none";
});

// Charger la liste des machines
async function loadMachines() {
  try {
    const res = await fetch(GOOGLE_APPS_SCRIPT_URL);
    const json = await res.json();
    if (json.success && json.data.machines) {
      const select = document.getElementById("machineSelect");
      json.data.machines.forEach(m => {
        const opt = document.createElement("option");
        opt.value = m;
        opt.textContent = m;
        select.appendChild(opt);
      });
    }
  } catch (err) {
    console.error("Erreur chargement machines", err);
  }
}
loadMachines();

// Gestion de l'envoi
document.getElementById("pointageForm").addEventListener("submit", async (e) => {
  e.preventDefault();
  const formData = Object.fromEntries(new FormData(e.target).entries());

  try {
    const res = await fetch(GOOGLE_APPS_SCRIPT_URL, {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({
        action: "addPointage",
        data: formData
      })
    });
    const json = await res.json();
    document.getElementById("status").textContent = json.success ? "‚úÖ Intervention enregistr√©e" : "‚ùå Erreur : " + json.error;
  } catch (err) {
    document.getElementById("status").textContent = "‚ö†Ô∏è √âchec de l‚Äôenvoi";
    console.error(err);
  }
});
</script>

